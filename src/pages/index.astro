---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Welcome to My Simulations Portfolio</h1>
      <p>Explore my interactive simulations and projects.</p>
      
      <section class="simulations">
        <div class="card">
          <h2>Frappadingue</h2>
          <p>Description of your simulation</p>
          <a href="/frappadingue/">View Simulation â†’</a>
        </div>
        
        <!-- Add more simulation cards here -->
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    width: 960px;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 3em 1em;
  }
  
  h1 {
    font-size: 3em;
    margin: 0.5em 0;
  }
  
  .simulations {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.2s;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .card h2 {
    margin-top: 0;
  }
  
  .card a {
    color: #4a90e2;
    text-decoration: none;
    font-weight: bold;
  }
</style>